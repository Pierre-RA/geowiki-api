{
  "name": "geowiki-api",
  "version": "0.0.1",
  "description": "geowiki API in Typescript",
  "main": "/dist/server.js",
  "scripts": {
    "test": "jest --forceExit",
    "postinstall": "gulp build",
    "start": "gulp serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anthillsolutions/api-skel.git"
  },
  "author": "Pierre Repetto-Andipatin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/anthillsolutions/api-skel/issues"
  },
  "homepage": "https://github.com/anthillsolutions/api-skel#readme",
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "bail": true,
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/tests/**/*.ts"
    ],
    "testEnvironment": "node",
    "mapCoverage": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{ts,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/coverage/**",
      "!**/gulpfile.js",
      "!**/server/types/**"
    ]
  },
  "engines": {
    "node": "8.4.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/chai": "^4.0.4",
    "@types/dotenv": "^4.0.1",
    "@types/express": "^4.0.37",
    "@types/filesystem": "0.0.28",
    "@types/jest": "^20.0.8",
    "@types/mongoose": "^4.7.21",
    "@types/node": "^8.0.27",
    "@types/supertest": "^2.0.3",
    "chai": "^4.1.2",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-mocha": "^4.3.1",
    "gulp-typescript": "^3.2.2",
    "jest": "^21.0.1",
    "mocha": "^3.5.0",
    "supertest": "^3.0.0",
    "ts-jest": "^21.0.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "jszip": "^3.1.4",
    "mongoose": "^4.11.10",
    "node-mongoose-ts": "^0.1.4",
    "pm2": "^2.6.1"
  }
}
